.log {
  height: 54px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.circle-container {
  position: absolute;
  width: 100vw;
  height: 100vh;
  animation: rotate 5s linear 1 forwards;
}

@keyframes rotate {
  0% {
      transform: rotate(0deg) scale(1);
  }

  80% {
      transform: rotate(180deg) scale(2);
  }

  100% {
      transform: rotate(360deg) scale(0.0001);
  }
}

.circle {
  /* 不会因为元素过大,导致页面可以滚动 */
  position: absolute;
  /* right: -30vw; */
  border-radius: 50%;
  box-shadow: inset 0px 0px 50px rgba(255, 255, 255, 0.3);
}