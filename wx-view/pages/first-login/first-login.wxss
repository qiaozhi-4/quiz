.container {
  display: grid;
  /* 每个元素自动占用新行 */
  grid-auto-flow: row;
  /* 水平和垂直居中 */
  place-items: center;
  /* 设置行间距 */
  gap: 30px;
}

.row {
  width: 80vw;
}

.avatar-wrapper {
  margin-top: 26.97%;
  position: relative;
}

.avatar,
.avatar-img,
.avatar-small-img {
  border-radius: 50%;
}


.avatar {
  padding: 0;
  border-radius: 50%;
  /* !important 禁止样式覆盖 */
  width: 130px !important;
  height: 130px;

  display: grid;
  /* 水平和垂直居中 */
  place-items: center;
}

.avatar-small-img {
  position: absolute;
  height: 37px;
  bottom: 0px;
  right: 0px;
}

.text,
.input {
  padding-left: 20px;
}

.text {
  margin-bottom: 4px;
  font-size: 14px;
  color: rgba(255, 255, 255, 0.5);
}

.input {
  height: 54px;
  background-color: rgba(255, 255, 255, 0.19);
  border-radius: 30px;
  color: #fff;
  font-size: 20px;
  font-weight: bold;
}

.submit {
  float: right;
  margin: 0px !important;
  padding: 0px !important;
  width: 105px !important;
  height: 40px !important;
  border-radius: 30px;
  background-color: #fff !important;

  display: flex;
  justify-content: center;
  align-items: center;
}

.submit-text {
  /* 文字渐变色 */
  background: linear-gradient(to right, #be53ff, #ad5cff, #9c63ff, #8b68ff, #796dff);
  -webkit-background-clip: text !important;
  background-clip: text !important;
  color: transparent !important;
}
/* 按钮点击样式 */
.submit-hover{
  transform: scale(0.9);
}

