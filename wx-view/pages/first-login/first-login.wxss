.container {
  display: grid;
  /* 每个元素自动占用新行 */
  grid-auto-flow: row;
  /* 水平和垂直居中 */
  place-items: center;
  /* 设置行间距 */
  gap: 30px;
}

.row {
  width: 80vw;
}

.avatar-wrapper {
  margin-top: 26.97%;
  position: relative;
}

.avatar,
.avatar-img,
.avatar-small-img {
  border-radius: 50%;
}


.avatar {
  padding: 0;
  border-radius: 50%;
  /* !important 禁止样式覆盖 */
  width: 130px !important;
  height: 130px;

  display: grid;
  /* 水平和垂直居中 */
  place-items: center;
}

.avatar-small-img {
  position: absolute;
  height: 37px;
  bottom: 0px;
  right: 0px;
}

.text,
.input {
  padding-left: 20px;
}

.text {
  margin-bottom: 4px;
  font-size: 14px;
  color: rgba(255, 255, 255, 0.5);
}

.input {
  height: 54px;
  background-color: rgba(255, 255, 255, 0.19);
  border-radius: 30px;
  color: #fff;
  font-size: 20px;
  font-weight: bold;
}