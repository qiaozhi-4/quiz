.container {
  display: grid;
  /* 每个元素自动占用新行 */
  grid-auto-flow: row;
  /* 水平和垂直居中 */
  place-items: center;
  /* 设置行间距 */
  gap: 30px 10px;
}

.row {
  width: 81vw;
}

.avatar-button {
  margin-top: 14.16vh;
  height: 130px;
  border-radius: 0px;
  background-color: var(--color-main);
}

.avatar-switch-img {
  position: absolute;
  height: 37px;
  bottom: 0px;
  right: 0px;
}

.text,
.input {
  padding-left: 20px;
}

.text {
  margin-bottom: 4px;
  font-size: 14px;
  color: rgba(255, 255, 255, 0.5);
}

.input {
  height: 54px;
  background-color: rgba(255, 255, 255, 0.19);
  border-radius: 30px;
  color: #fff;
  font-size: 20px;
  font-weight: bold;
}

.placeholderStyle {
  font-size: 20px;
  color: rgba(255, 255, 255, 0.5);
  font-weight: 400
}

.submit {
  float: right;
  width: 105px;
  height: 40px;
}


/* 按钮点击样式 */
.submit-hover {
  transform: scale(0.9);
}