page {
    background-image: linear-gradient(to bottom, #bc5cf8 0%, #6F3ED3 30%, #2F2460 100%);
}

.row {
    width: 92vw;
}

.row-iocn {
    height: 50px;
    justify-content: flex-end;
}

.iocn {
    height: 22px;
    width: 22px;
    margin-left: 30px;
}

.option {
    width: 92vw;
    background-color: rgba(255, 255, 255, 0.2)
}

.footer {
    justify-content: space-between;
    padding: 14px 20px;
    height: 64px;
}

.footer>.iocn {
    height: 16px;
    margin: 0;
}


.viewpoint {
    height: 36px;
    width: 60%;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 3000px;
    padding: 0 18px;
    color: rgba(255, 255, 255, 0.3);
}

.viewpoint-placeholderStyle {
    color: rgba(255, 255, 255, 0.3);
}

.viewpoint-but {
    height: 36px;
    color: #fff;
    background-color: #5830C7;
}

.viewpoint-but-disabled {
    height: 36px !important;
    color: rgba(255, 255, 255, 0.3) !important;
    background-color: rgba(255, 255, 255, 0.1)!important;
}