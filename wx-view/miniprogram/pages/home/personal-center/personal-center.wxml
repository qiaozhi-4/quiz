<scroll-view type="nested" scroll-y bindscroll="handlScroll" scroll-into-view="{{clickRanking ? 'ranking' : ''}}" enable-passive scroll-with-animation>
  <quiz-navigation-bar back="{{false}}" title="">
    <quiz-svg slot="before" src="/images/我的-头部加号.svg" />
  </quiz-navigation-bar>
  <!-- 背景图 -->
  <view class="background-image"></view>
  <!-- 头像 -->
  <view class="avatar" style="padding-top: {{headHeight}};">
    <quiz-avatar size="69px" src="{{avatarUrl}}" wrapperSize="3px" wrapperColor="#fff"></quiz-avatar>
    <text>{{nickname}}</text>
  </view>
  <!-- 统计 -->
  <view class="statistics">
    <block wx:for="{{statistics}}" wx:key="unique">
      <view class="item">
        <text class="count">{{item.value}}</text>
        <text class="name">{{item.name}}</text>
      </view>
    </block>
  </view>
  <!-- 榜单 -->
  <view class="ranking" id="ranking">
    <!-- 榜单类别 -->
    <view class="class" style="{{isSticky ? 'padding-top: ' + headHeight + '; gap: 0;' : ''}}">
      <view class="award" hidden="{{isSticky}}">
        <view class="text1">10答0问</view>
        <view class="text2">本周连续回答10题</view>
        <quiz-button>领取奖励</quiz-button>
      </view>
      <view class="tabs">
        <view class="{{rankingIndex ==0 ? 'right' : ''}}" style="{{rankingIndex ==0 ? 'background: rgba(88, 48, 199, 1); border-radius: 0 0 20px 0;' : ''}}" data-index="0" bindtap="changeRankingIndex">
          亲密排行
        </view>
        <view class="{{rankingIndex ==1 ? 'right left' : ''}}" style="{{rankingIndex ==1 ? 'background: rgba(88, 48, 199, 1); border-radius: 0 0 20px 20px;' : ''}}" data-index="1" bindtap="changeRankingIndex">
          我的选择
        </view>
        <view class="{{rankingIndex ==2 ? 'left' : ''}}" style="{{rankingIndex ==2 ? 'background: rgba(88, 48, 199, 1); border-radius: 0 0 0 20px;' : ''}}" data-index="2" bindtap="changeRankingIndex">
          分类主题
        </view>
      </view>
    </view>
    <!-- 榜单列表 -->
    <view class="list">
      <block wx:for="{{rankingData}}" wx:key="unique" wx:for-index="idx">
        <view class="item">
          <view class="v1 no{{idx + 1}}">{{idx + 1}}</view>
          <view class="v2 no{{idx + 1}}">
            <quiz-avatar size="42px" src="{{item.avatarUrl}}" wrapperSize="2px" wrapperColor="#fff"></quiz-avatar>
          </view>
          <view class="v3">{{item.nickname}}</view>
          <view class="v4 no{{idx + 1}}">{{item.score}}</view>
          <view class="v5">
            <quiz-svg slot="before" src="/images/我的-查看.svg" />
          </view>
        </view>
      </block>
    </view>
    <!-- 防止最下面的看不到 -->
    <view class="bottom-view" style="height: 100px;"></view>
  </view>
</scroll-view>