<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.quiz.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.quiz.entity.User">
        <id column="user_id" property="userId"/>
        <result column="nickname" property="nickname"/>
        <result column="avatar_url" property="avatarUrl"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="phone" property="phone"/>
        <result column="mail" property="mail"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="last_login_at" property="lastLoginAt"/>
        <result column="enabled" property="enabled"/>
    </resultMap>

    <!-- Dto查询映射结果 -->
    <resultMap id="UserDtoResultMap" type="com.quiz.dto.UserDto">
        <id column="user_id" property="userId"/>
        <result column="nickname" property="nickname"/>
        <result column="avatar_url" property="avatarUrl"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="phone" property="phone"/>
        <result column="mail" property="mail"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="last_login_at" property="lastLoginAt"/>
        <result column="enabled" property="enabled"/>
        <collection property="permissions" ofType="String">
            <result column="permission_name"/>
        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        user_id, nickname, avatar_url, username, password, phone, mail, created_at, updated_at, last_login_at, enabled
    </sql>
    <select id="selectUserDtoByAccount" resultMap="UserDtoResultMap">
        SELECT u.*, p.permission_name
        FROM quiz.t_user AS u
                 INNER JOIN quiz.t_user_roles AS ur
                            ON u.user_id = ur.user_id
                 INNER JOIN quiz.t_role AS r
                            ON r.role_id = ur.role_id
                 INNER JOIN quiz.t_role_permissions AS rp
                            ON r.role_id = rp.role_id
                 INNER JOIN quiz.t_permission AS p
                            ON p.permission_id = rp.permission_id
        WHERE u.username = #{account}
           or u.mail = #{account}
           or u.phone = #{account}
    </select>

</mapper>
